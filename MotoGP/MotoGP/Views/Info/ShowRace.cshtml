@model Race
@{
    ViewData["Title"] = $"Race - {Model.Name}";
    String source = $"/images/races/{Model.RaceID}.jpg";
}
<div>
    <h2>
        @Model.Date - @Model.Country
    </h2>
    <img src=@source alt=@Model.Name />
    <p>@Model.Description</p>
    <p><a asp-controller="Info" asp-action="ListRaces">Back</a></p>

</div>
