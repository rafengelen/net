@model MusicStore.Models.ViewModels.ListAlbumsViewModel;
@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <form asp-area="Admin" asp-controller="Albums" asp-action="Index" method="get">
        <h1>Filter op:</h1>
        <div class="form-group">
            <label asp-for="genreID" class="control-label">Genre</label>
            <select oninput="this.form.submit()" asp-for="genreID" class="form-control" asp-items="Model.Genres">
                <option value="0">----Choose a genre----</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="artistID" class="control-label">Artist</label>
            <select oninput="this.form.submit()" asp-for="artistID" class="form-control" asp-items="Model.Artists">
                <option value="0">----Choose an artist----</option>
            </select>
        </div>
        
        <div class="form-group">
            <label asp-for="title" class="control-label">Title</label>
            <input asp-for="title" class="form-control" oninput="this.form.submit()"  />

        </div>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].Title)
            </th>
            @*
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumArtUrl)
            </th>
            *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Albums) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumArtUrl)
            </td>
            *@
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlbumID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AlbumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AlbumID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
